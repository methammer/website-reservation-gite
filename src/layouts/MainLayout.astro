---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
	title: string;
  description?: string;
}

const { title, description = "Découvrez nos gîtes et chambres d'hôte de charme en Provence, avec piscine et cadre naturel exceptionnel." } = Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Gîtes en Provence</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    <style>
      /* Appliquer les polices Google Fonts si chargées */
      :root {
        --font-family-sans-serif: 'Open Sans', sans-serif;
        --font-family-serif: 'Lora', serif;
      }
    </style>
	</head>
	<body>
    <Header />
		<main id="main-content">
			<slot />
		</main>
    <Footer />
    <script>
      // Script pour le menu burger (si on en ajoute un plus tard)
      // Ou autres scripts globaux
    </script>
	</body>
</html>
<style is:global>
	/* Styles spécifiques au layout si nécessaire, mais global.css devrait couvrir la plupart */
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
  main {
    flex-grow: 1;
  }
</style>
